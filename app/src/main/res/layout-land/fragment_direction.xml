<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DirectionFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerDirection"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <cu.uci.fiai.fici.libs.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:padding="@dimen/_10sdp"
        android:layout_gravity="top|center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:radius="@dimen/_3sdp"
        app:fillColor="@color/colorPrimaryDark"
        app:pageColor="@color/colorPrimaryLight"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="@dimen/_1sdp" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/viewBeforeBoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_21sdp"
        android:layout_gravity="left|bottom"
        android:visibility="invisible"
        android:text="@string/before"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_60sdp"
        android:shadowColor="@color/colorPrimaryLight"
        android:shadowDy="6"
        android:shadowDx="6"
        android:shadowRadius="1" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/viewNextBoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_21sdp"
        android:layout_gravity="right|bottom"
        android:text="@string/next"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_60sdp"
        android:shadowColor="@color/colorPrimaryLight"
        android:shadowDy="6"
        android:shadowDx="-6"
        android:shadowRadius="1" />

</FrameLayout>
