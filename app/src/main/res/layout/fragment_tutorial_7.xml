<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorialContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_700"
    tools:context=".tutorial.TutorialFragment">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llTutoMap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:padding="@dimen/_25sdp"
        android:gravity="center">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center"
            android:text="{md-place @color/md_lime_500}"
            android:textSize="@dimen/_90sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/string_tutorial_7" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDrawer"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivTutoMenuMap"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="@color/md_indigo_700"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="match_parent" />

</FrameLayout>