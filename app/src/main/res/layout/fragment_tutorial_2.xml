<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorialContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_indigo_800"
    tools:context=".tutorial.TutorialFragment">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llTutoUCI"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:padding="@dimen/_25sdp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10sdp"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/uci_logo_letras"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/string_tutorial_2" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivDrawer"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivTutoMenuUCI"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:background="@color/md_indigo_800"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="match_parent" />

</FrameLayout>
