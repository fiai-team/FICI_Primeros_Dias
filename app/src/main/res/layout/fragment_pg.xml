<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20sdp"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    tools:context=".fragment.PGFragment">

    <com.github.abdularis.civ.CircleImageView
        android:id="@+id/viewCirclePG"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        app:highlightEnable="false" />

    <TextView
        android:id="@+id/viewPGGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:gravity="center"
        android:textSize="@dimen/_27sdp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="FI##" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_30sdp">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="{md-person}" />

        <TextView
            android:id="@+id/viewPGName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_30sdp">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/colorPrimaryDark"
            android:text="{fa-envelope-square}" />

        <TextView
            android:id="@+id/viewPGUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:text="@string/string_departament_of"
        android:gravity="center" />

    <TextView
        android:id="@+id/viewPGDepartament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:gravity="center" />

</LinearLayout>