<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BossFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/viewCircleBoss"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            app:highlightEnable="false" />

        <TextView
            android:id="@+id/viewBossCargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_21sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Cargo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_30sdp">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/colorPrimaryDark"
                android:text="{md-person}" />

            <TextView
                android:id="@+id/viewBossName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_30sdp">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/colorPrimaryDark"
                android:text="{fa-envelope-square}" />

            <TextView
                android:id="@+id/viewBossUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>

    </LinearLayout>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/viewGuestBoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:padding="@dimen/_6sdp"
        android:gravity="center"
        android:background="@drawable/guest_background"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="@dimen/_15sdp"
        android:text="{md-star spin} Invitado {md-star spin}"/>

    <LinearLayout
        android:id="@+id/viewPermanentGuestBoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/guest_background"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/_15sdp"
            android:text="{md-star spin}"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="@dimen/_15sdp"
                android:text="Invitado"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:gravity="center"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="@dimen/_15sdp"
                android:text="Permanente"/>

        </LinearLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/_15sdp"
            android:text="{md-star spin}"
            android:layout_weight="0.5"/>

    </LinearLayout>

</FrameLayout>
